<section class="resellerratings-reviews-section page-width section-{{ section.id }}-padding">
  {%- if settings.resellerratings_enabled -%}
    <div class="section-header center">
      {% if section.settings.heading != blank %}
        <h2 class="h1">{{ section.settings.heading | escape }}</h2>
      {% endif %}
      {% if section.settings.subheading != blank %}
        <p class="subtitle">{{ section.settings.subheading | escape }}</p>
      {% endif %}
    </div>
    
    <div class="resellerratings-reviews-container">
      {% render 'resellerratings-reviews', product: product %}
    </div>
  {%- else -%}
    {%- comment -%}
      ResellerRatings is disabled. You can enable it in theme settings.
    {%- endcomment -%}
  {%- endif -%}
</section>

{% schema %}
{
  "name": "ResellerRatings Reviews",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "Customer Reviews"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Section subheading"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "ResellerRatings Reviews"
    }
  ]
}
{% endschema %}

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .resellerratings-reviews-container {
    margin-top: 2rem;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>