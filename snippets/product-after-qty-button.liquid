<script>
(function () {
  function moveButtonInsideQty() {
    var qtyInner = document.querySelector('.product-info__quantity-selector');
    var customBtn = document.querySelector('.product-after-qty');
    if (qtyInner && customBtn && customBtn.parentNode !== qtyInner) {
      qtyInner.appendChild(customBtn);
    }
  }

  // Run after DOM loads
  document.addEventListener('DOMContentLoaded', function () {
    moveButtonInsideQty();

    // Keep checking a few times in case Shopify re-renders product info dynamically
    var tries = 0;
    var interval = setInterval(function () {
      moveButtonInsideQty();
      tries++;
      if (tries > 20) clearInterval(interval); // stop after ~4 seconds
    }, 200);
  });
})();
</script>

