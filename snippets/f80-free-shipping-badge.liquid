<div class="custom-free-shipping" id="free-shipping-f80">
  Free Shipping
</div>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const badge = document.getElementById("free-shipping-f80");
  if (!badge) return;

  // Select PRICE block container
  const priceBlockItem = document.querySelector(
    '.product-info__block-item[data-block-id="price"]'
  );

  // Select PRICE inner div (where we insert after)
  const priceInner = document.querySelector(
    '.product-info__block-item[data-block-id="price"] .product-info__price'
  );

  // Move badge under price
  if (priceInner) {
    priceInner.insertAdjacentElement("afterend", badge);
  }

  // Add custom class to price block container
  if (priceBlockItem) {
    priceBlockItem.classList.add("withfreeshipping_badge");
  }
});
</script>


